<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/bottom_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="-3dp"
        android:right="-3dp"
        android:top="-3dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent color -->
            <stroke android:color="@color/main" android:width="2dp" /> <!-- Border width -->
        </shape>
    </item>
</layer-list>
