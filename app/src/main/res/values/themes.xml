<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TechSwap" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Add the following line to change the navigation bar color -->
        <item name="android:navigationBarColor">@color/transparent_gray</item>
        <item name="android:statusBarColor">@color/main</item>
<!--        <item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="LogoText">
        <item name="android:textSize">18sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">#ffffff</item> <!-- Text color (white in this example) -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Button style for active state -->
    <style name="ActiveLoginSwitchButton" parent="ButtonStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/active_button_style</item>
    </style>

    <!-- Button style for inactive state -->
    <style name="InactiveLoginSwitchButton" parent="ButtonStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/inactive_button_style</item>
    </style>

    <style name="Theme.TechSwap" parent="Base.Theme.TechSwap" />

    <style name="HeaderText">
        <item name="android:textSize">22sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">#000000</item> <!-- Text color (white in this example) -->
        <item name="android:textStyle">bold</item>
        <item name="android:padding">6dp</item>
        <item name="android:paddingLeft">9dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">16sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">#000000</item> <!-- Text color (white in this example) -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">15sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">@color/gray</item> <!-- Text color (white in this example) -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PriceText">
        <item name="android:textSize">18sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">#000000</item> <!-- Text color (white in this example) -->
        <item name="android:textStyle">bold</item>
    </style>
</resources>