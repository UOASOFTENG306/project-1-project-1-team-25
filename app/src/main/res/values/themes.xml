<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TechSwap" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="LogoText">
        <item name="android:textSize">18sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">#ffffff</item> <!-- Text color (white in this example) -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Button style for active state -->
    <style name="ActiveLoginSwitchButton" parent="ButtonStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/active_button_style</item>
    </style>

    <!-- Button style for inactive state -->
    <style name="InactiveLoginSwitchButton" parent="ButtonStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/inactive_button_style</item>
    </style>

    <style name="Theme.TechSwap" parent="Base.Theme.TechSwap" />

    <style name="HeaderText">
        <item name="android:textSize">20sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">#000000</item> <!-- Text color (white in this example) -->
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CategoryText">
        <item name="android:textSize">14sp</item> <!-- Adjust the text size as needed -->
        <item name="android:textColor">#000000</item> <!-- Text color (white in this example) -->
        <item name="android:textStyle">bold</item>
    </style>
</resources>